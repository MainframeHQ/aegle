{
  "name": "@aegle/agent",
  "version": "0.1.0",
  "description": "Aegle agent",
  "repository": "git@github.com:MainframeHQ/aegle.git",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "author": "Mainframe",
  "license": "MIT",
  "files": [
    "lib/*",
    "types/*"
  ],
  "scripts": {
    "clean": "del lib types",
    "build:js": "BABEL_ENV=node babel src --out-dir lib --extensions \".ts\"",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
    "build": "yarn clean && yarn build:js && yarn build:types",
    "test:types": "tsc --noEmit -p tsconfig.build.json",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@aegle/core": "^0.1.0",
    "@aegle/sync": "^0.1.0",
    "@erebos/hex": "^0.9.0",
    "@erebos/secp256k1": "^0.9.0",
    "@erebos/timeline": "^0.9.0",
    "get-stream": "^5.1.0",
    "p-queue": "^6.1.1",
    "rxjs": "^6.5.3"
  }
}
